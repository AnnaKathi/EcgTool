struct sEcgData
	{
	int			ident;
	int			person;
	int			session;
	ePosition	pos;
	double		werte[5];
	};
//---------------------------------------------------------------------------
class PACKAGE cMySqlEcgData : public cBase
	{
public:
	cMySqlEcgData(cMySqlWork& worker);
	~cMySqlEcgData();

	bool	loadTable();
	bool	nextRow();

__property sEcgData row = { read=get_data };
__property int num_rows = { read=get_num_rows };

private:
	sEcgData		fdata;
	sEcgData		get_data();

	cMySqlWork*		fwork;

	MYSQL_RES*  	fres; //SQL-Daten
	MYSQL_ROW		frow;
	int				get_num_rows();
	};
