//---------------------------------------------------------------------------
#pragma hdrstop

#include "classMySql.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
//---------------------------------------------------------------------------
cMySql::cMySql()
	: fwork (new cMySqlWork), fecg(new cMySqlEcgData)
	{
	}
//---------------------------------------------------------------------------
cMySql::~cMySql()
	{
	if (fwork) delete fwork;
	if (fecg)  delete fecg;
	}
//---------------------------------------------------------------------------
cMySqlEcgData& cMySql::get_ecg()
	{
	return *fecg;
	}
//---------------------------------------------------------------------------
bool cMySql::open()
	{
	if (!fwork->open())
		return fail(fwork->error_code, fwork->error_msg);
	else
		{
		//Unterklassen erstellen
		return ok();
		}
	}
//---------------------------------------------------------------------------
bool cMySql::close()
	{
	if (!fwork->close())
		return fail(fwork->error_code, fwork->error_msg);
	else
		return ok();
	}
//---------------------------------------------------------------------------
